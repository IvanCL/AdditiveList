<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.icl.additivelist">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".usescase.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".usescase.products.ProductsActivity"
                android:label="@string/title_activity_products" />
        <activity
                android:name=".usescase.products.ProductsDetailActivity"
                android:label="@string/title_activity_additives" />
        <activity
                android:name=".usescase.additives.AdditivesActivity"
                android:label="@string/title_activity_additives" />
        <activity
                android:name=".usescase.additives.AdditiveDetailActivity"
                android:label="@string/title_activity_additives" />
        <activity
                android:name=".usescase.main.MainActivity"
                android:label="@string/title_activity_main" />
    </application>

</manifest>