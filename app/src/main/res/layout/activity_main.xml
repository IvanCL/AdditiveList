<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".usescase.main.MainActivity"
        android:background="@color/colorBackgroundPrimary">

    <TextView
            android:id="@+id/additivesTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444240"
            android:gravity="center"
            android:text="ADITIVOS"
            android:textStyle="normal|bold|italic"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="@id/additivesImg"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="@id/additivesImg"
            app:layout_constraintTop_toTopOf="parent"
            />


    <ImageView
            android:id="@+id/additivesImg"
            android:src="@drawable/food_additive"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/additivesTxt"
            app:layout_constraintBottom_toTopOf="@id/productsTxt"
            />



    <TextView
            android:id="@+id/productsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444240"
            android:gravity="center"
            android:text="PRODUCTOS"
            android:paddingTop="15dp"
            android:textStyle="normal|bold|italic"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/additivesImg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/productsImg"

            />


    <ImageView
            android:id="@+id/productsImg"
            android:src="@drawable/products"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productsTxt"
            />




</android.support.constraint.ConstraintLayout>