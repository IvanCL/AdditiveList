<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#A94CAF50">


    <TextView android:id="@+id/additiveNameTxt"
              android:layout_margin="10dp"
              android:padding="10dp"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:ellipsize="end"
              android:textAppearance="@style/TextAppearance.AppCompat.Large"
              android:textAlignment="center"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/vegNoVegIcon"
              tools:text="Aditivo"/>

    <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"
            app:layout_constraintBottom_toTopOf="@+id/lineHorizon"
    />

    <android.support.constraint.Guideline
            android:id="@+id/lineHorizon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="50dp"
    />

<!--    <TextView android:id="@+id/postsId"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:padding="10dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="ID"/>-->
    <!--android:src="@drawable/vegan_icon_ok"
    android:src="@android:drawable/stat_notify_error"
    -->
    <ImageView
            android:id="@+id/vegNoVegIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/vegan_icon_ok"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/descriptionTxt"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:maxLines="2"
              android:ellipsize="end"
              android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
              tools:text="Description additive"
              app:layout_constraintStart_toStartOf="@id/additiveNameTxt"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/additiveNameTxt"
    />

    <TextView android:id="@+id/originAdditive"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:padding="10dp"
              android:textStyle="italic"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/descriptionTxt"
              app:layout_constraintStart_toStartOf="parent"
              tools:text="origin (Vegan, Not Vegan)"/>


</android.support.constraint.ConstraintLayout>